#playlist_window.modal.hide
  = form_for [@author, @story, @playlist], :html => { :class => 'form-horizontal' } do |f|
    .modal-header
      %button.close{:type => "button", "data-dismiss" => "modal"}×
      %h3 Что играет?
    .modal-body
      %p
        - if params[:request] != '1'  
          .control-group
            = label_tag :artist, nil, :class => 'control-label'
            .controls
              = text_field_tag :artist, @playlist.try(:track).try(:artist).try(:name), :class => 'text_field', :id => "artist"
          .control-group
            = label_tag :track, nil, :class => 'control-label'
            .controls
              = text_field_tag :track, @playlist.try(:track).try(:name), :class => 'text_field', :id => "track"
        .control-group
          = f.label :startmin, :class => 'control-label'
          .controls
            = f.text_field :startmin, :class => 'text_field'
        .control-group
          = f.label :endmin, :class => 'control-label'
          .controls
            = f.text_field :endmin, :class => 'text_field'
        
    .modal-footer
      = link_to "Назад", "#", :class => "btn", "data-dismiss" => "modal"
      = f.submit "Сохранить", :class => 'btn btn-primary'