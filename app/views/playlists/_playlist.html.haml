%tr
  %td
    = link_to_artist_track playlist
    %br
    играет с #{playlist.startmin} по #{playlist.endmin} мин
    - if playlist.identifier
      = "by "
      %strong=link_to_playlist_user playlist
    = search_links playlist
  %td
    - if can_edit?
      = link_to "Ред.", edit_author_story_playlist_path(playlist.story.author, playlist.story, playlist), :class => "btn btn-mini", :remote => true
    - if can_destroy?
      = link_to "Удалить", [playlist.story.author, playlist.story, playlist], :method => :delete, :class => "btn btn-mini btn-danger", :confirm => "Точно удалить?"