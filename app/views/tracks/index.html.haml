%h1
  = link_to "+", new_artist_track_path(@artist), :class => 'btn btn-primary', :remote => true
  = @artist.name.capitalize
  - if can_edit?
    = link_to "Ред.", edit_artist_path(@artist), :class => 'btn btn-mini', :remote => true
  - if can_destroy?
    = link_to "Удалить", artist_path(@artist), :method => :delete, :confirm => "Точно удалить?", :class => 'btn btn-mini btn-danger'

%table.table.table-striped
  %thead
  %tbody
    =render @tracks