= form_for [:move, @artist, @track], :remote => true, :html => {:class => 'form-horizontal'} do |f|
  .modal-header
    %button.close{:type => "button", "data-dismiss" => "modal"}×
    %h3 Перенос трека к другому исполнителю
  .modal-body
    %p
      .control-group
        = label_tag "Перенести к исполнителю", nil, :class => 'control-label'
        .controls
          = autocomplete_field_tag 'artist', '', autocomplete_artist_name_artists_path, :size => 75, :update_elements => {:id => '#new_artist_id'}
          = hidden_field_tag :new_artist_id, nil

  .modal-footer
    = link_to "Назад", "#", :class => "btn", "data-dismiss" => "modal"
    = f.submit "Перенести", :class => 'btn btn-danger'