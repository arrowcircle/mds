= form_for @author, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit author_submit_text(@author), :class => 'btn btn-primary'
    = link_to "Назад", authors_path, :class => 'btn'
