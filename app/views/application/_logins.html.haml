%ul.navbar-nav.pull-right
  - if user_signed_in?
    %li.nav-item.dropdown
      = link_to edit_user_registration_path, class: ['nav-link', 'p-0'] do
        - if current_user.avatar.present?
          = image_tag current_user.avatar_url(:xsmall), width: 20, class: ['rounded-circle', 'z-depth-0']
        = current_user.username
    %li.nav-item= link_to 'Выход', destroy_user_session_path, method: :delete, class: 'nav-link'
  - else
    %li.nav-item= link_to 'Регистрация', new_user_registration_path, class: 'nav-link'
    %li.nav-item= link_to 'Вход', new_user_session_path, class: 'nav-link'
