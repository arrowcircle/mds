= form_for [@author, @story], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :link, :class => 'control-label'
    .controls
      = f.text_field :link, :class => 'text_field'
  .control-group
    = f.label :completed, :class => 'control-label'
    .controls
      = f.check_box :completed, :class => 'check_box'
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.date_select :date, :class => 'input-min inline', :start_year => 1995
  .control-group
    = f.label :radio, :class => 'control-label'
    .controls
      = f.select :radio, [["Станция 2000", 0], ["Муз ТВ", 1], ["Серебряный дождь", 2], ["Энергия", 3], ["Пионер ФМ", 4]], :include_blank => true, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), [@author, :stories], :class => 'btn'
