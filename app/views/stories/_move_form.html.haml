= form_for [:move, @author, @story], :remote => true, :html => {:class => 'form-horizontal'} do |f|
  .modal-header
    %button.close{:type => "button", "data-dismiss" => "modal"}×
    %h3 Перенос рассказа к другому автору
  .modal-body
    %p
      .control-group
        = label_tag "Перенести к автору", nil, :class => 'control-label'
        .controls
          = autocomplete_field_tag 'author', '', autocomplete_author_name_authors_path, :size => 75, :update_elements => {:id => '#new_author_id'}
          = hidden_field_tag :new_author_id, nil

  .modal-footer
    = link_to "Назад", "#", :class => "btn", "data-dismiss" => "modal"
    = f.submit "Перенести", :class => 'btn btn-danger'